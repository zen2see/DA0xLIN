{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2017"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "helpers/types"
    ],
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "rootDir": ".",
  "baseUrl": ".",
  "outDir": "dist",
  "paths": {
    "~~/*": [
      "./src/*"
    ]
  },
  "exclude": [
    "**/node_modules",
    ".husky",
    "src/styles/css",
    "tailwind.config.ts",
    "node_modules",
    "**/.yalc/**/*",
    ".yalc/**/*"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
